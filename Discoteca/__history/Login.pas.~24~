unit Login;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.StdCtrls,
  Vcl.Imaging.jpeg, Vcl.ButtonStylesAttributes, Vcl.StyledButton;

type
  TFrmLogin = class(TForm)
    pnlLogin: TPanel;
    imglogin: TImage;
    pnlCampos: TPanel;
    lblMensa: TLabel;
    Shape1: TShape;
    Shape2: TShape;
    btnLogin: TStyledButton;
    edtPass: TEdit;
    edtUser: TEdit;
    lblTitulo: TLabel;
    Panel1: TPanel;
    Label1: TLabel;
    Shape3: TShape;
    Shape4: TShape;
    Label2: TLabel;
    StyledButton1: TStyledButton;
    Edit1: TEdit;
    Edit2: TEdit;
    procedure FormPaint(Sender: TObject);
    procedure FormResize(Sender: TObject);
    procedure btnLoginClick(Sender: TObject);
    procedure AjustarPainelLogin(Ajuste: integer);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FrmLogin: TFrmLogin;

implementation

{$R *.dfm}

uses principal;

procedure TFrmLogin.AjustarPainelLogin(Ajuste: integer);
begin
  case Ajuste of
    1:
    begin
      // vem coisa aqui
    end;
    2:
    begin
      // vem coisa aqui
    end;
    3:
    begin  
    end;
  end;
end;

procedure TFrmLogin.btnLoginClick(Sender: TObject);
begin
  Application.CreateForm(TfrmPrincipal, frmPrincipal);
  frmPrincipal.Show;
  frmLogin.Hide;
end;

procedure TFrmLogin.FormPaint(Sender: TObject);
var
  altura, coluna: Word;
begin
  altura := (ClientHeight + 255) div 256;
  for coluna := 0 to 255 do
    with Canvas do
      begin
        Brush.Color := RGB(coluna, 6, 6); { Modifique para obter cores diferentes }
        FillRect(Rect(0, coluna * altura, ClientWidth, (coluna + 1) * altura));
      end;
end;

procedure TFrmLogin.FormResize(Sender: TObject);
var
  FormWidth: integer;
begin
  // Obtém a largura do formulário atual
  FormWidth := Self.ClientWidth;

  case FormWidth of
    1367..MaxInt:  // Se o formulário for maior que 1367
    begin
      pnlLogin.Width        := 960;
      pnlLogin.Height       := 380;

      lblTitulo.Left        := 200;
      lblTitulo.Top         := 16;
      lblTitulo.Font.Height := 36;

      lblMensa.Left         := 16;
      lblMensa.Top          := 59;
      lblMensa.Font.Height  := 30;

      Shape1.Width          := 441;
      Shape1.Height         := 41;
      Shape1.Left           := 16;
      Shape1.Top            := 182;

      edtUser.Left          := 76;
      edtUser.Top           := 243;
      edtUser.Font.Height   := 27;

      Shape2.Width          := 441;
      Shape2.Height         := 41;
      Shape2.Left           := 16;
      Shape2.Top            := 239;

      edtPass.Left          := 76;
      edtPass.Top           := 243;
      edtPass.Font.Height   := 27;

      btnLogin.Width        := 441;
      btnLogin.Height       := 42;
      btnLogin.Left         := 16;
      btnLogin.Top          := 294;
    end;
    1025..1366:    // Se o formulário for maior que 1024 e menor ou igual a 1367
    begin
      pnlLogin.Width        := 683;
      pnlLogin.Height       := 270;
      lblTitulo.Left        := 143;
      lblTitulo.Top         := 16;
      lblTitulo.Font.Height := 26;
      lblMensa.Left         := 28;
      lblMensa.Top          := 59;
      lblMensa.Font.Height  := 21;
      Shape1.Left           := 16;
      Shape1.Top            := 182;
      edtUser.Left          := 76;
      edtUser.Top           := 186;
      edtUser.Font.Height   := 19;
      Shape2.Left           := 16;
      Shape2.Top            := 239;
      edtPass.Left          := 76;
      edtPass.Top           := 243;
      edtPass.Font.Height   := 19;
      btnLogin.Left         := 16;
      btnLogin.Top          := 294;
    end
    else           // Se o formulário for menor ou igual a 1024
      pnlLogin.Width := 640;
  end;

  pnlLogin.Left := (Self.ClientWidth - pnlLogin.Width) div 2;
  pnlLogin.Top  := (Self.ClientHeight - pnlLogin.Height) div 2;
  imgLogin.Width := pnlLogin.ClientWidth div 2;
  pnlCampos.Width := imgLogin.Width;
end;

end.
