unit Principal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus;

type
  TfrmPrincipal = class(TForm)
    MainMenu1: TMainMenu;
    Cadastros1: TMenuItem;
    Artistas1: TMenuItem;
    Sair1: TMenuItem;
    lbuns1: TMenuItem;
    procedure Artistas1Click(Sender: TObject);
    procedure Sair1Click(Sender: TObject);
    procedure lbuns1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmPrincipal: TfrmPrincipal;

implementation

{$R *.dfm}

uses Artistas, Albuns;

procedure TfrmPrincipal.Artistas1Click(Sender: TObject);
begin
// Verifica se o formulário frmArtistas já está criado
  if not Assigned(frmArtistas) then
    frmArtistas := TfrmArtistas.Create(Application);  // Cria o formulário, se não existir

  frmArtistas.Show;  // Exibe o formulário
end;

procedure TfrmPrincipal.lbuns1Click(Sender: TObject);
var
  ChildForm: TForm;
begin
  // Verifica se o formulário frmAlbuns já está aberto
  ChildForm := nil;
  for var i := 0 to MDIChildCount - 1 do
    if MDIChildren[i] is TfrmAlbuns then
    begin
      ChildForm := MDIChildren[i];
      Break;
    end;

  // Se não estiver aberto, cria uma nova instância do formulário
  if not Assigned(ChildForm) then
    ChildForm := TfrmAlbuns.Create(Self);

  // Exibe o formulário MDI Child
  ChildForm.Show;
end;

procedure TfrmPrincipal.Sair1Click(Sender: TObject);
begin
  Application.Terminate;
end;

end.
